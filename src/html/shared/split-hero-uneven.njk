<section class="o-split-hero  o-split-hero--uneven c-card--alternate">
  <div class="o-split-hero__row">
    <div class="o-split-hero__item">
      <article class="c-card  c-card--feature  c-card--dark" style="background-image: url(images/sa.png);">
        <a href="#">
          {{ cards[5] | safe }}

          <div class="c-card__extras">
            <!--
            <div class="c-card__image">
              <img src="images/guitar-player.png" alt="Guitar player" />
            </div>
            -->

            <div class="c-card__actions">
              <span class="c-btn  c-btn--white c-btn--chunky c-btn--icon-right">
                Get this limited time deal! <svg viewBox="0 0 1 1"><use xlink:href="images/icons.svg#arrow-right"></use></svg>
              </span>
            </div>
          </div>
        </a>
      </article>
    </div><!-- o-split-hero__item -->

    <div class="o-split-hero__item o-split-hero__item--stacked">

      <article class="c-card c-card--medium">
        <a href="#">
          {{ cards[2] | safe }}

          <span class="c-card__icon">
            <svg viewBox="0 0 1 1"><use xlink:href="images/icons.svg#arrow-right"></use></svg>
          </span>
        </a>
      </article>

      <article class="c-card c-card--medium c-card--no-bottom-margin">
        <a href="#">
          {{ cards[0] | safe }}

          <span class="c-card__icon">
            <svg viewBox="0 0 1 1"><use xlink:href="images/icons.svg#arrow-right"></use></svg>
          </span>
        </a>
      </article>

    </div><!-- o-split-hero__item -->

  </div><!-- o-split-hero__row -->

</section><!-- o-split-hero -->